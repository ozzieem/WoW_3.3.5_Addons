			</Button>
			<Button name="HoloFriendsNameButton9" inherits="HoloFriendsNameButtonTemplate" id="9">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton8" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton10" inherits="HoloFriendsNameButtonTemplate" id="10">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton9" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton11" inherits="HoloFriendsNameButtonTemplate" id="11">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton10" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton12" inherits="HoloFriendsNameButtonTemplate" id="12">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton11" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton13" inherits="HoloFriendsNameButtonTemplate" id="13">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton12" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton14" inherits="HoloFriendsNameButtonTemplate" id="14">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton13" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton15" inherits="HoloFriendsNameButtonTemplate" id="15">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton14" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton16" inherits="HoloFriendsNameButtonTemplate" id="16">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton15" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton17" inherits="HoloFriendsNameButtonTemplate" id="17">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton16" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton18" inherits="HoloFriendsNameButtonTemplate" id="18">
