					</Layer>
				</Layers>
				<Scripts>
					<OnVerticalScroll>
						FauxScrollFrame_OnVerticalScroll(self, offset, FRIENDS_FRAME_IGNORE_HEIGHT, HoloFriends_List_Update);
					</OnVerticalScroll>
					<OnShow>
						HoloFriends_chat("HoloFriends_List_Update from .xml HoloFriendsScrollFrame OnShow", HF_DEBUG_OUTPUT);
						HoloFriends_List_Update();
					</OnShow>
				</Scripts>
			</ScrollFrame>
		</Frames>
		<Layers><Layer level="OVERLAY">
			<FontString name="HoloFriendsOnline" inherits="GameFontHighlightSmall" justifyH="LEFT" text="HOLOFRIENDS_WINDOWMAINNUMBERONLINE">
				<Size><AbsDimension x="200" y="14"/></Size>
				<Anchors><Anchor point="BOTTOMLEFT">
					<Offset><AbsDimension x="23" y="132"/></Offset>
				</Anchor></Anchors>
			</FontString>
		</Layer></Layers>
		<Scripts>
			<OnLoad>
				self:RegisterEvent("VARIABLES_LOADED");
			</OnLoad>
			<OnHide>
				HoloFriends_OnHide();
			</OnHide>
			<OnEvent>
				HoloFriends_OnEvent(self, event, ...);
			</OnEvent>
			<OnUpdate>
				HoloFriends_OnUpdate();
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>
