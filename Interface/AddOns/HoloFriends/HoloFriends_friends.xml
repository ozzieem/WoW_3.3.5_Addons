<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Button name="HoloFriendsNameButtonTemplate" virtual="true" movable="true">
		<Size><AbsDimension x="295" y="16"/></Size>
		<Frames>
			<CheckButton name="$parentServer">
				<Size><AbsDimension x="16" y="16"/></Size>
				<Anchors><Anchor point="TOPLEFT">
					<Offset><AbsDimension x="20" y="0"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnClick>
						HoloFriends_CheckBox_OnClick(self);
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
				<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
				<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
				<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
			</CheckButton>
		</Frames>
		<Layers>
			<Layer level="BORDER">
				<Texture name="$parentClassIcon" file="Interface\Glues\CharacterCreate\UI-CharacterCreate-Classes">
					<Size><AbsDimension x="16" y="16"/></Size>
					<Anchors><Anchor point="TOPLEFT">
						<Offset><AbsDimension x="36" y="0"/></Offset>
					</Anchor></Anchors>
				</Texture>
				<FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT">
					<Size><AbsDimension x="240" y="14"/></Size>
					<Anchors><Anchor point="LEFT" relativeTo="$parentClassIcon" relativePoint="RIGHT">
						<Offset><AbsDimension x="3" y="0"/></Offset>
					</Anchor></Anchors>
				</FontString>
				<FontString name="$parentNameRemove" inherits="GameFontNormal" justifyH="LEFT">
					<Size><AbsDimension x="240" y="14"/></Size>
					<Anchors><Anchor point="LEFT" relativeTo="$parentName" relativePoint="LEFT">
						<Offset><AbsDimension x="3" y="5"/></Offset>
					</Anchor></Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				self:RegisterForClicks("LeftButtonUp", "MiddleButtonUp", "RightButtonUp");
				self:RegisterForDrag("LeftButton");
				self:Hide();
			</OnLoad>
			<OnDragStart>
				HoloFriends_NameButton_OnDragStart(self);
			</OnDragStart>
			<OnDragStop>
				HoloFriends_NameButton_OnDragStop();
			</OnDragStop>
			<OnClick>
				HoloFriends_NameButton_OnClick(self, button);
				PlaySound("igMainMenuOptionCheckBoxOn");
			</OnClick>
			<OnEnter>
				HoloFriends_NameButton_SetTooltip(self);
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<NormalTexture name="$parentTexture" file="Interface\Buttons\UI-MinusButton-UP">
			<Size><AbsDimension x="16" y="16"/></Size>
			<Anchors><Anchor point="LEFT">
				<Offset><AbsDimension x="3" y="0"/></Offset>
			</Anchor></Anchors>
		</NormalTexture>
		<HighlightTexture name="$parentHighlight" file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD"/>
	</Button>
	<Frame name="HoloFriendsFrame" parent="FriendsFrame" hidden="true" setAllPoints="true">
		<Frames>
			<Frame name="HoloFriendsDropDown" inherits="UIDropDownMenuTemplate"/>
			<Button name="HoloFriendsFrameToggleTab1" inherits="TabButtonTemplate" text="FRIENDS" id="1">
				<Anchors><Anchor point="TOPLEFT" relativeTo="FriendsFrame">
					<Offset><AbsDimension x="70" y="-39"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnShow>
						PanelTemplates_DeselectTab(self);
					</OnShow>
					<OnClick>
						HoloFriends_ShowInGameFriendsList = true;
						PanelTemplates_Tab_OnClick(self, FriendsTabHeader);
						FriendsFrame_Update();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="HoloFriendsFrameToggleTab2" inherits="TabButtonTemplate" text="IGNORE" id="2">
				<Anchors><Anchor point="LEFT" relativeTo="HoloFriendsFrameToggleTab1" relativePoint="RIGHT">
					<Offset><AbsDimension x="0" y="0"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnShow>
						PanelTemplates_DeselectTab(self);
					</OnShow>
					<OnClick>
						PanelTemplates_Tab_OnClick(self, FriendsTabHeader);
						FriendsFrame_Update();
					</OnClick>
				</Scripts>
			</Button>
			<Button name="HoloFriendsAddFriendButton" inherits="UIPanelButtonTemplate" text="ADD_FRIEND">
				<Size><AbsDimension x="131" y="21"/></Size>
				<Anchors><Anchor point="BOTTOMLEFT" relativeTo="FriendsFrame">
					<Offset><AbsDimension x="17" y="107"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnLoad>
						self:SetFrameLevel( self:GetFrameLevel() + 3 );
					</OnLoad>
					<OnClick>
						HoloFriends_AddFriend();
					</OnClick>
					<OnEnter>
						GameTooltip_AddNewbieTip(self,ADD_FRIEND, 1.0, 1.0, 1.0, NEWBIE_TOOLTIP_ADDFRIEND, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="HoloFriendsRemoveFriendButton" inherits="UIPanelButtonTemplate" text="REMOVE_FRIEND">
				<Size><AbsDimension x="131" y="21"/></Size>
				<Anchors><Anchor point="TOP" relativeTo="HoloFriendsAddFriendButton" relativePoint="BOTTOM">
					<Offset><AbsDimension x="0" y="-5"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnLoad>
						self:SetFrameLevel( self:GetFrameLevel() + 3 );
					</OnLoad>
					<OnClick>
						HoloFriends_RemoveFriend();
					</OnClick>
					<OnEnter>
						GameTooltip_AddNewbieTip(self,REMOVE_FRIEND, 1.0, 1.0, 1.0, NEWBIE_TOOLTIP_REMOVEFRIEND, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="HoloFriendsTurnInfoButton" inherits="UIPanelButtonTemplate">
				<Size><AbsDimension x="20" y="20"/></Size>
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsAddFriendButton" relativePoint="TOPRIGHT">
					<Offset><AbsDimension x="23" y="0"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnClick>
						HOLOFRIENDS_TURNINFO = 1 - HOLOFRIENDS_TURNINFO;
						HoloFriends_chat("HoloFriends_List_Update from .xml HoloFriendsTurnInfoButton", HF_DEBUG_OUTPUT);
						HoloFriends_List_Update();
					</OnClick>
					<OnEnter>
						GameTooltip_AddNewbieTip(self, HOLOFRIENDS_TOOLTIPTURNINFOTITLE, 1.0, 1.0, 1.0, HOLOFRIENDS_TOOLTIPTURNINFOTEXT, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
				<NormalTexture name="$parentTexture" file="Interface\BUTTONS\UI-RotationRight-Button-Up.blp"/>
				<HighlightTexture name="$parentHighlight" file="Interface\BUTTONS\ButtonHilight-Square.blp" alphaMode="ADD"/>
				<PushedTexture name="$parentPushed" file="Interface\BUTTONS\UI-RotationRight-Button-Down.blp" alphaMode="ADD"/>
				<DisabledTexture name="$parentDisabled" file="Interface\BUTTONS\UI-RotationRight-Button-Down.blp" alphaMode="ADD"/>
			</Button>
			<Button name="HoloFriendsShareButton" inherits="UIPanelButtonTemplate">
				<Size><AbsDimension x="30" y="30"/></Size>
				<Anchors><Anchor point="BOTTOMLEFT" relativeTo="HoloFriendsRemoveFriendButton" relativePoint="BOTTOMRIGHT">
					<Offset><AbsDimension x="18" y="0"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnClick>
						InterfaceOptionsFrame:Show();
						InterfaceOptionsFrame_OpenToCategory(HOLOFRIENDS_SHAREFRIENDSWINDOWTITLE);
					</OnClick>
					<OnEnter>
						GameTooltip_AddNewbieTip(self, HOLOFRIENDS_SHAREFRIENDSWINDOWTITLE, 1.0, 1.0, 1.0, HOLOFRIENDS_TOOLTIPSHAREBUTTON, 1);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
				<NormalTexture name="$parentTexture" file="Interface\Icons\INV_Misc_Note_02.blp"/>
				<HighlightTexture name="$parentHighlight" file="Interface\Buttons\ButtonHilight-Square.blp" alphaMode="ADD"/>
				<PushedTexture name="$parentPushed" file="Interface\Icons\INV_Misc_Note_02.blp" alphaMode="ADD"/>
				<DisabledTexture name="$parentDisabled" file="Interface\Icons\INV_Misc_Note_02.blp" alphaMode="ADD"/>
			</Button>
			<Button name="HoloFriendsAddGroupButton" inherits="UIPanelButtonTemplate" text="HOLOFRIENDS_WINDOWMAINADDGROUP">
				<Size><AbsDimension x="131" y="21"/></Size>
				<Anchors><Anchor point="LEFT" relativeTo="HoloFriendsAddFriendButton" relativePoint="RIGHT">
					<Offset><AbsDimension x="66" y="0"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnClick>
						StaticPopup_Show("HOLOFRIENDS_ADDGROUP");
					</OnClick>
				</Scripts>
			</Button>
			<Button name="HoloFriendsRemoveGroupButton" inherits="UIPanelButtonTemplate" text="HOLOFRIENDS_WINDOWMAINREMOVEGROUP">
				<Size><AbsDimension x="131" y="21"/></Size>
				<Anchors><Anchor point="TOP" relativeTo="HoloFriendsAddGroupButton" relativePoint="BOTTOM">
					<Offset><AbsDimension x="0" y="-5"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnClick>
						HoloFriendsLists_RemoveGroup(HoloFriends_GetList(), HoloFriends_GetSelectedEntry(), FRIENDS);
						HoloFriends_DeselectEntry();
						HoloFriends_chat("HoloFriends_List_Update from .xml HoloFriendsRemoveGroupButton", HF_DEBUG_OUTPUT);
						HoloFriends_List_Update();
						-- update share window if open
						if ( HoloFriends_ShareFrame:IsVisible() ) then
							HoloFriendsShare_OnShow(HoloFriends_ShareFrame);
						end
					</OnClick>
				</Scripts>
			</Button>
			<CheckButton name="HoloFriendsShowOfflineButton" virtual="true">
				<Size><AbsDimension x="20" y="20"/></Size>
				<Anchors><Anchor point="TOPRIGHT" relativeTo="FriendsFrame" relativePoint="TOPRIGHT">
					<Offset><AbsDimension x="-40" y="-35"/></Offset>
				</Anchor></Anchors>
				<Layers><Layer level="ARTWORK">
					<FontString name="$parentText" inherits="GameFontHighlightSmall" text="HOLOFRIENDS_WINDOWMAINSHOWOFFLINE">
						<Anchors><Anchor point="RIGHT" relativePoint="LEFT">
							<Offset><AbsDimension x="-10" y="1"/></Offset>
						</Anchor></Anchors>
					</FontString>
				</Layer></Layers>
				<Scripts>
					<OnLoad>
						self:RegisterEvent("VARIABLES_LOADED");
					</OnLoad>
					<OnEvent>
						if ( event == "VARIABLES_LOADED" ) then
							self:UnregisterEvent("VARIABLES_LOADED");
							self:SetChecked(HOLOFRIENDS_SHOW_OFFLINE_FRIENDS);
						end
					</OnEvent>
					<OnClick>
						if ( self:GetChecked() ) then
							HOLOFRIENDS_SHOW_OFFLINE_FRIENDS = 1;
							PlaySound("igMainMenuOptionCheckBoxOff");
						else
							HOLOFRIENDS_SHOW_OFFLINE_FRIENDS = 0;
							PlaySound("igMainMenuOptionCheckBoxOn");
						end
						HoloFriends_chat("HoloFriends_List_Update from .xml HoloFriendsShowOfflineButton", HF_DEBUG_OUTPUT);
						HoloFriends_List_Update();
					</OnClick>
				</Scripts>
				<NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
				<PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
				<HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
				<CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
				<DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
			</CheckButton>
			<Button name="HoloFriendsScanExtrasButton" inherits="UIPanelButtonTemplate" text="HOLOFRIENDS_WINDOWMAINBUTTONSCAN">
				<Size><AbsDimension x="100" y="20"/></Size>
				<Anchors><Anchor point="TOPRIGHT" relativeTo="HoloFriendsShowOfflineButton" relativePoint="BOTTOMRIGHT">
					<Offset><AbsDimension x="0" y="4"/></Offset>
				</Anchor></Anchors>
				<Scripts>
					<OnClick>
						HoloFriendsScan_ClickScan()
					</OnClick>
				</Scripts>
			</Button>
			<Button name="HoloFriendsNameButton1" inherits="HoloFriendsNameButtonTemplate" id="1">
				<Anchors><Anchor point="TOPLEFT" relativeTo="FriendsFrame">
					<Offset><AbsDimension x="23" y="-80"/></Offset>
				</Anchor></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton2" inherits="HoloFriendsNameButtonTemplate" id="2">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton1" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton3" inherits="HoloFriendsNameButtonTemplate" id="3">
				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton2" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton4" inherits="HoloFriendsNameButtonTemplate" id="4">
