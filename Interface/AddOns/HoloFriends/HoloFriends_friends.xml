				<Anchors><Anchor point="TOPLEFT" relativeTo="HoloFriendsNameButton5" relativePoint="BOTTOMLEFT"/></Anchors>
			</Button>
			<Button name="HoloFriendsNameButton7" inherits="HoloFriendsNameButtonTemplate" id="7">
